{
  "$jason": {
    "head": {
      "title": "Grandcruwijnen",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "size": "15"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "description": "Online wijn kopen | Kies uit 2500+ kwaliteitswijnen - Grandcruwijnen  - Grandcruwijnen.nl",
      "actions": {
        "handleLink": [
          {
            "{{#if $jason.url.indexOf('abnamro.nl/portalserver') != -1 }}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url}}",
                "view": "app"
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$default"
            }
          }
        ],
        "handleEan": {
          "type": "$network.request",
          "options": {
            "url": "https://stable.grandcruwijnen.nl/nl/rest/V1/ean/{{$jason.ean}}"
          },
          "success": {
            "type": "$href",
            "options": {
              "url": "https://jasper-ketelaar.github.io/scan-result.json",
              "options": {
                "url": "{{$jason.result}}"
              }
            }
          },
          "error": {
            "type": "$util.banner",
            "options": {
              "title": "Error",
              "description": "Something went wrong"
            }
          }
        }
      }
    },
    "body": {
      "header": {
        "title": "Grandcruwijnen Contact"
      },
      "sections": [
        {
          "items": [
            {
              "type": "label",
