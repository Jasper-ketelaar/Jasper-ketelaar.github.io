{
  "$jason": {
    "head": {
      "title": "Grandcruwijnen",
      "description": "Online wijn kopen | Kies uit 2500+ kwaliteitswijnen - Grandcruwijnen  - Grandcruwijnen.nl",
      "actions": {
        "handleLink": [
          {
            "{{#if $jason.url.indexOf('abnamro.nl/portalserver') != -1 }}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url}}",
                "view": "app"
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$default"
            }
          }
        ]
      }
    },
    "body": {
      "background": {
        "type": "html",
        "url": "https://test.grandcruwijnen.nl.mage2cloud.nl/",
        "action": {
          "trigger": "handleLink"
        }
      },
      "footer": {
        "tabs": {
          "style": {
            "background": "rgba(255,255,255,0.8)",
            "color:disabled": "#cecece",
            "color": "#009efa"
          },
          "items": [
            {
              "image": "file://home.png",
              "href": {
                "url": "file://app.json",
                "transition": "modal"
              }
            },
            {
              "image": "file://home.png",
              "action": {
                "type": "$media.camera",
                "options": {
                  "type": "photo"
                }
              }
            }
          ]
        }
      }
    }
  }
}
